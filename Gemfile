# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'mysql2'

gem 'devise'

# deploy
gem 'capistrano'

# https://github.com/seyhunak/twitter-bootstrap-rails
gem 'twitter-bootstrap-rails'

# random gems
gem 'nokogiri'

# geocoding
gem 'gmaps4rails'
