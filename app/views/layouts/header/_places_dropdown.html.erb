<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    Rangos
    <b class="caret"></b>
  </a>
  <ul class="dropdown-menu">
    <% unless current_user.places.empty? %>
      <% current_user.places.each do |place| %>
        <% if !place.place_image.blank? %>
          <li><%= link_to '<i>'.html_safe + image_tag(place.place_image.baby) + '</i> '.html_safe << place.title, place %></li>
        <% else %>
          <li><%= link_to place.title, place %></li>
        <% end %>
      <% end %>
      <li class="divider"></li>
    <% end %>
    <li class="nav-header">Actions</li>
    <li><%= link_to t('site.header.createrango'), new_place_path  %></li>
  </ul>
</li>
