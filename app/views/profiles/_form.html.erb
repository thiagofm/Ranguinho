<%= form_for [current_user, @profile], :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :country, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :country, [[]] + Country.countries, {}, { :'data-select-sync' => 'state-sync', :'data-placeholder' => 'Choose your country', :single => '', :tabindex => '1' } %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :state, state?(@profile), {}, { :'data-state-sync' => '', :'data-placeholder' => 'Choose your state', :single => '', :tabindex => '1' } %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :street, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :profile_image, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :profile_image %> 
      <%= f.hidden_field :profile_image_cache %> 
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_profiles_path, :class => 'btn' %>
  </div>
<% end %>
